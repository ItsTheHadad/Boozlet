<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:padding="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/very_brown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pic"
            android:padding="10dp"

            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/pic"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Title"
                android:id="@+id/tv_title"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_subtitle"
                android:textColor="@color/white"
                android:text="Sub title with a lengthy detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_ing1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="ingredient 1"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_text"
                    android:layout_height="25dp"/>

                <TextView
                    android:id="@+id/tv_ing2"
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="ingredient 2"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_text"
                    android:layout_height="25dp"/>

                <TextView
                    android:id="@+id/tv_ing3"
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="ingredient 3"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_text"
                    android:layout_height="25dp"/>
                
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>